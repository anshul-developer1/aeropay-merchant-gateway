<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    tools:context=".activity.SetPinLogin">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/temporaryView"
        android:layout_height="@dimen/_50sdp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:src="@drawable/settings_header"
        android:id="@+id/headerBackground"
        android:scaleType="fitXY"
        >
    </ImageView>


    <ImageView
        android:id="@+id/back_button"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:padding="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_17sdp"
        android:layout_centerVertical="true"
        android:src="@drawable/back_arrow">
    </ImageView>

    <com.aeropaymerchantsdk.view.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:ctypeface="@string/adineue_pro_bold"
        android:text="Set pin code"
        android:textColor="@color/white_background"
        android:textSize="@dimen/_16ssp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/temporaryView"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none"
            android:overScrollMode="always">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4"
                    android:id="@+id/editTextField"
                    android:layout_marginLeft="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_45sdp"
                    android:layout_marginRight="@dimen/_40sdp"
                    android:orientation="horizontal" >
                    <EditText
                        android:id="@+id/pinBox0"
                        android:inputType="numberPassword"
                        android:password="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:editable="false"
                        android:text=""
                        android:enabled="false"
                        android:clickable="false"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/_10sdp"
                        android:focusedByDefault="true"
                        android:imeOptions="actionNext"
                        android:textSize="@dimen/_20ssp"
                        android:textColor="@color/pin_textview"
                        android:gravity="center"/>
                    <EditText
                        android:id="@+id/pinBox1"
                        android:inputType="numberPassword"
                        android:password="true"
                        android:editable="false"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:clickable="false"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext"
                        android:text=""
                        android:layout_margin="@dimen/_10sdp"
                        android:textSize="@dimen/_20ssp"
                        android:textColor="@color/pin_textview"
                        android:gravity="center"/>
                    <EditText
                        android:id="@+id/pinBox2"
                        android:inputType="numberPassword"
                        android:password="true"
                        android:editable="false"
                        android:text=""
                        android:enabled="false"
                        android:clickable="false"
                        android:imeOptions="actionNext"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:textSize="@dimen/_20ssp"
                        android:textColor="@color/pin_textview"
                        android:gravity="center"/>
                    <EditText
                        android:id="@+id/pinBox3"
                        android:inputType="numberPassword"
                        android:password="true"
                        android:editable="false"
                        android:text=""
                        android:enabled="false"
                        android:clickable="false"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:textSize="@dimen/_20ssp"
                        android:imeOptions="actionDone"
                        android:textColor="@color/pin_textview"
                        android:gravity="center"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/statusMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:textColor="#ff0000"
                    android:textSize="20sp"
                    android:padding="5dip"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_below="@id/editTextField"
                    android:layout_height="match_parent">

                    <TableLayout
                        android:id="@+id/numericPad"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="1dip"
                        android:showDividers="none"
                        android:gravity="bottom"
                        android:shrinkColumns="*"
                        android:layout_alignParentBottom="true"
                        android:stretchColumns="*" >
                        <TableRow
                            android:id="@+id/tableRow1"
                            android:showDividers="none"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <com.aeropaymerchantsdk.view.CustomTextView
                                android:id="@+id/button1"
                                android:layout_width="wrap_content"
                                android:layout_weight="1"
                                app:ctypeface="@string/adineue_pro_bold"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="1"
                                android:textSize="@dimen/_16ssp"
                                android:textColor="@color/textview_color"
                                android:background="@drawable/rectangle"
                                >
                            </com.aeropaymerchantsdk.view.CustomTextView>
                            <com.aeropaymerchantsdk.view.CustomTextView
                                android:id="@+id/button2"
                                android:layout_width="wrap_content"
                                android:layout_weight="1"
                                app:ctypeface="@string/adineue_pro_bold"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="2"
                                android:textSize="@dimen/_16ssp"
                                android:textColor="@color/textview_color"
                                android:background="@drawable/rectangle"
                                >
                            </com.aeropaymerchantsdk.view.CustomTextView>
                            <com.aeropaymerchantsdk.view.CustomTextView
                                android:id="@+id/button3"
                                android:layout_width="wrap_content"
                                android:layout_weight="1"
                                app:ctypeface="@string/adineue_pro_bold"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="3"
                                android:textSize="@dimen/_16ssp"
                                android:textColor="@color/textview_color"
                                android:background="@drawable/rectangle"
                                >
                            </com.aeropaymerchantsdk.view.CustomTextView>
                        </TableRow>
                        <TableRow
                            android:id="@+id/tableRow2"
                            android:layout_width="match_parent"
                            android:showDividers="none"
                            android:layout_height="wrap_content"
                            >
                            <com.aeropaymerchantsdk.view.CustomTextView
                                android:id="@+id/button4"
                                android:layout_width="wrap_content"
                                android:layout_weight="1"
                                app:ctypeface="@string/adineue_pro_bold"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="4"
                                android:textSize="@dimen/_16ssp"
                                android:textColor="@color/textview_color"
                                android:background="@drawable/rectangle"
                                >
                            </com.aeropaymerchantsdk.view.CustomTextView>
                            <com.aeropaymerchantsdk.view.CustomTextView
                                android:id="@+id/button5"
                                android:layout_width="wrap_content"
                                android:layout_weight="1"
                                app:ctypeface="@string/adineue_pro_bold"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/textview_color"
                                android:text="5"
                                android:textSize="@dimen/_16ssp"
                                android:background="@drawable/rectangle"
                                >
                            </com.aeropaymerchantsdk.view.CustomTextView>
                            <com.aeropaymerchantsdk.view.CustomTextView
                                android:id="@+id/button6"
                                android:layout_width="wrap_content"
                                android:layout_weight="1"
                                app:ctypeface="@string/adineue_pro_bold"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/textview_color"
                                android:text="6"
                                android:textSize="@dimen/_16ssp"
                                android:background="@drawable/rectangle"
                                >
                            </com.aeropaymerchantsdk.view.CustomTextView>
                        </TableRow>
                        <TableRow
                            android:id="@+id/tableRow3"
                            android:layout_width="match_parent"
                            android:showDividers="none"
                            android:layout_height="wrap_content"
                            >
                            <com.aeropaymerchantsdk.view.CustomTextView
                                android:id="@+id/button7"
                                android:layout_width="wrap_content"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="7"
                                app:ctypeface="@string/adineue_pro_bold"
                                android:textSize="@dimen/_16ssp"
                                android:textColor="@color/textview_color"
                                android:background="@drawable/rectangle"
                                >
                            </com.aeropaymerchantsdk.view.CustomTextView>
                            <com.aeropaymerchantsdk.view.CustomTextView
                                android:id="@+id/button8"
                                android:layout_width="wrap_content"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="8"
                                app:ctypeface="@string/adineue_pro_bold"
                                android:textSize="@dimen/_16ssp"
                                android:textColor="@color/textview_color"
                                android:background="@drawable/rectangle"
                                >
                            </com.aeropaymerchantsdk.view.CustomTextView>
                            <com.aeropaymerchantsdk.view.CustomTextView
                                android:id="@+id/button9"
                                android:layout_width="wrap_content"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                app:ctypeface="@string/adineue_pro_bold"
                                android:text="9"
                                android:textSize="@dimen/_16ssp"
                                android:textColor="@color/textview_color"
                                android:background="@drawable/rectangle"
                                >
                            </com.aeropaymerchantsdk.view.CustomTextView>
                        </TableRow>
                        <TableRow
                            android:id="@+id/tableRow4"
                            android:showDividers="none"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <com.aeropaymerchantsdk.view.CustomTextView
                                android:id="@+id/buttonExit"
                                android:layout_width="wrap_content"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                app:ctypeface="@string/adineue_pro_bold"
                                android:text=""
                                android:textSize="@dimen/_16ssp"
                                android:textColor="@color/textview_color"
                                android:background="@drawable/rectangle"
                                >
                            </com.aeropaymerchantsdk.view.CustomTextView>

                            <com.aeropaymerchantsdk.view.CustomTextView
                                android:id="@+id/button0"
                                android:layout_width="wrap_content"
                                android:layout_weight="1"
                                app:ctypeface="@string/adineue_pro_bold"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="0"
                                android:textSize="@dimen/_16ssp"
                                android:textColor="@color/textview_color"
                                android:background="@drawable/rectangle"
                                >
                            </com.aeropaymerchantsdk.view.CustomTextView>
                            <com.aeropaymerchantsdk.view.CustomTextView
                                android:id="@+id/buttonDeleteBack"
                                android:layout_width="wrap_content"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Delete"
                                app:ctypeface="@string/adineue_pro_bold"
                                android:textSize="@dimen/_16ssp"
                                android:textColor="@color/textview_color"
                                android:background="@drawable/rectangle"
                                >
                            </com.aeropaymerchantsdk.view.CustomTextView>
                        </TableRow>
                    </TableLayout>
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>