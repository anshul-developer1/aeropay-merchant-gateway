<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/pin_textview</item>
    </style>

    <style name="EditTextTheme">
        <item name="android:textColorHint">#544e4b</item>
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="colorAccent">#544e4b</item>
    </style>

    <style name="AppTheme.Splash" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="CustomSpinnerTheme"
        parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">#283747</item>
        <item name="android:padding">@dimen/_7sdp</item>
    </style>

</resources>
